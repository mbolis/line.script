{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2020",
    "baseUrl": ".",
    "paths": {
      "lib/*": [
        "./lib/*"
      ]
    },
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "skipLibCheck": true,
    "moduleResolution": "Bundler",
    "moduleDetection": "legacy",
    "noEmit": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "allowJs": true,
    "sourceMap": true
  },
  "include": [
    "src"
  ]
}