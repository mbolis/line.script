{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2020",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "moduleDetection": "auto",
    "noEmit": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "sourceMap": true,
    "jsx": "react-jsx",
    "jsxImportSource": "@/jsx"
  },
  "include": [
    "src"
  ],
  "files": [
    "src/index.tsx"
  ]
}